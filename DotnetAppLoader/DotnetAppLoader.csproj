<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <AssemblyName>FunctionsNetHost</AssemblyName>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <!--You do not need to install ICU if you enable globalization invariant mode.-->
  <!--https://github.com/dotnet/core/blob/main/release-notes/7.0/linux-packages.md -->
  
  <!--<PropertyGroup>
    <InvariantGlobalization>true</InvariantGlobalization>
  </PropertyGroup>-->

  <PropertyGroup>
    <DefineConstants>$(FUNCTIONS_CONSTANTS)</DefineConstants>
  </PropertyGroup>

  <PropertyGroup>
    <ExportsFile>$(MSBuildThisFileDirectory)exports.def</ExportsFile>
  </PropertyGroup>
</Project>
